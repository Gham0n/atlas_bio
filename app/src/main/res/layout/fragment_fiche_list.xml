<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textViewEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@color/color_emerald_green" />

    <TextView
        android:id="@+id/titreFicheList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LISTES DES FICHES"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:background="@color/color_emerald_green"
        android:layout_below="@id/textViewEmpty"/>


    <Button
        android:id="@+id/btn_retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titreFicheList"
        android:layout_margin="8dp"
        android:text="Retour" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFiche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_retour"
        />

    <Button
        android:id="@+id/btnAddFiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Ajouter Fiche" />



</RelativeLayout>